<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>
<br>

<% total_amount = 0 %>

<% @cartitems.each do |e| %>
商品名称：<%= Product.find(e.product_id).name %><br>
価格：<%= Product.find(e.product_id).price %><br>
数量：<%= e.qty %><br>
<%= link_to 'カートから削除', cartitem_path(e), data: { turbo_method: :delete } %>
<br>

<% total_amount += Product.find(e.product_id).price * e.qty %>
<% end %>

<br>
合計金額：<%= total_amount %>円
<br>
<%= link_to '商品一覧に戻る', root_path %>